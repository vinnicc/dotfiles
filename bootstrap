#!/usr/bin/env zsh

taps=(
  homebrew/dupes
  homebrew/versions
  caskroom/cask
  caskroom/fonts
)

packages=(
  # caskroom/cask
  brew-cask

  ack
  chruby
  coreutils
  dnstop
  dos2unix
  exiftool
  ffmpeg
  freeimage
  freetype
  gist
  "git --with-pcre --with-brewed-curl --with-blk-sha1 --with-gettext --with-brewed-openssl --with-persistent-https"
  git-extras
  gnu-sed
  gnu-time
  gnupg
  gnutls
  gpgme
  heroku
  htop-osx
  hub
  "imagemagick --with-webp"
  ioping
  jq
  libffi
  libyaml
  lynx
  md5sha1sum
  nmap
  node # This installs `npm` too using the recommended installation method
  openssl
  phantomjs
  pigz
  pkg-config
  postgresql
  proctools
  psgrep
  pv
  pwgen
  "python --with-brewed-openssl"
  qt
  ranger
  readline
  reattach-to-user-namespace
  redis
  rename
  rhino
  rtmpdump
  ruby-install
  s3cmd
  sqlite
  sqlmap
  ssh-copy-id
  tmux
  tree
  ucspi-tcp # `tcpserver` et al.
  unrar
  "vim --override-system-vim"
  watch
  wdiff
  webkit2png
  wget
  youtube-dl
  zopfli
)

cask_packages=(
  # Apps not covered:
  #
  # battle.net
  # photoshop
  # office 2011

  # google-chrome-canary
  # imagealpha
  # imageoptim
  # istat-menus
  # miro-video-converter
  # steam
  # torbrowser
  # virtualbox
  bartender
  cloud
  colorpicker-hex
  disk-inventory-x
  feeds
  firefox
  google-chrome
  iterm2
  karabiner
  macdown
  menumeters
  ntfs-free
  quicksilver
  seil
  sketch
  sketch-toolbox
  skype
  slack
  slate
  spotify
  the-unarchiver
  totalspaces
  transmit
  utorrent
  vlc
  witch

  # caskroom/fonts
  font-inconsolata
  font-liberation-sans
  font-open-sans
  font-source-code-pro
  font-source-sans-pro
)

function log() {
  echo $* > /dev/stderr
}

###########################################################################

log "brew update"
brew update

log "brew upgrade"
brew upgrade

log "Tapping..."
for name in $taps
do
  log "brew tap ${name}"
  brew tap $name
done

log "Installing..."
for name_and_args in $packages
do
  log "brew install ${=name_and_args}"
  brew install "${=name_and_args}"
done

for name_and_args in $cask_packages
do
  log "brew cask install ${=name_and_args}"
  brew cask install "${=name_and_args}"
done

log "brew cleanup"
brew cleanup

log "brew cask cleanup"
brew cask cleanup

log "brew linkapps"
brew linkapps
