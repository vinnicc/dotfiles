# reload config (~/.skhdrc and ~/.yabairc)
ctrl + shift + alt - r : skhd -r; ~/.yabairc

# focus display
ctrl + shift + alt + cmd - w : yabai -m display --focus recent

# focus window
ctrl + shift + alt - h : yabai -m window --focus west
ctrl + shift + alt - j : yabai -m window --focus south
ctrl + shift + alt - k : yabai -m window --focus north
ctrl + shift + alt - l : yabai -m window --focus east

# swap window
ctrl + shift + alt + cmd - h : yabai -m window --swap west
ctrl + shift + alt + cmd - j : yabai -m window --swap south
ctrl + shift + alt + cmd - k : yabai -m window --swap north
ctrl + shift + alt + cmd - l : yabai -m window --swap east

# move window
# ctrl + shift + alt + cmd - n : yabai -m window --warp west
# ctrl + shift + alt + cmd - p : yabai -m window --warp east

# balance size of windows
ctrl + shift + alt - 0 : yabai -m space --balance

# change layout of desktop
ctrl + shift + alt - 1 : yabai -m space --layout bsp
ctrl + shift + alt - 2 : yabai -m space --layout float

# make floating window fill screen
ctrl + shift + alt - s : yabai -m window --grid 1:1:0:0:1:1

# make floating window fill left-half of screen
ctrl + shift + alt - a : yabai -m window --grid 1:2:0:0:1:1

# make floating window fill right-half of screen
ctrl + shift + alt - d : yabai -m window --grid 1:2:1:0:1:1

# create desktop, move window and follow focus - uses jq for parsing json (brew install jq)
# shift + cmd - n : yabai -m space --create && \
#                   index="$(yabai -m query --spaces --display | jq 'map(select(."native-fullscreen" == 0))[-1].index')" && \
#                   yabai -m window --space "${index}" && \
#                   yabai -m space --focus "${index}"

# create desktop and follow focus - uses jq for parsing json (brew install jq)
# cmd + alt - n : yabai -m space --create && \
#                 index="$(yabai -m query --spaces --display | jq 'map(select(."native-fullscreen" == 0))[-1].index')" && \
#                 yabai -m space --focus "${index}"

# create desktop
cmd + shift + alt + cmd - n : yabai -m space --create

# destroy desktop
cmd + shift + alt + cmd - x : yabai -m space --destroy

# fast focus desktop
# alt - x : yabai -m space --focus recent
# alt - z : yabai -m space --focus prev
# alt - c : yabai -m space --focus next
alt - 1 : yabai -m space --focus 1
alt - 2 : yabai -m space --focus 2
alt - 3 : yabai -m space --focus 3
alt - 4 : yabai -m space --focus 4
alt - 5 : yabai -m space --focus 5
alt - 6 : yabai -m space --focus 6
alt - 7 : yabai -m space --focus 7
alt - 8 : yabai -m space --focus 8
alt - 9 : yabai -m space --focus 9
alt - 0 : yabai -m space --focus 10

# send window to desktop and follow focus
# shift + cmd - x : yabai -m window --space recent; yabai -m space --focus recent
# shift + cmd - z : yabai -m window --space prev; yabai -m space --focus prev
# shift + cmd - c : yabai -m window --space next; yabai -m space --focus next
ctrl + shift + alt + cmd - 1 : yabai -m window --space  1; yabai -m space --focus 1
ctrl + shift + alt + cmd - 2 : yabai -m window --space  2; yabai -m space --focus 2
ctrl + shift + alt + cmd - 3 : yabai -m window --space  3; yabai -m space --focus 3
ctrl + shift + alt + cmd - 4 : yabai -m window --space  4; yabai -m space --focus 4
ctrl + shift + alt + cmd - 5 : yabai -m window --space  5; yabai -m space --focus 5
ctrl + shift + alt + cmd - 6 : yabai -m window --space  6; yabai -m space --focus 6
ctrl + shift + alt + cmd - 7 : yabai -m window --space  7; yabai -m space --focus 7
ctrl + shift + alt + cmd - 8 : yabai -m window --space  8; yabai -m space --focus 8
ctrl + shift + alt + cmd - 9 : yabai -m window --space  9; yabai -m space --focus 9
ctrl + shift + alt + cmd - 0 : yabai -m window --space 10; yabai -m space --focus 10

# focus monitor
# ctrl + alt - x  : yabai -m display --focus recent
# ctrl + alt - z  : yabai -m display --focus prev
# ctrl + alt - c  : yabai -m display --focus next
# ctrl + alt - 1  : yabai -m display --focus 1
# ctrl + alt - 2  : yabai -m display --focus 2
# ctrl + alt - 3  : yabai -m display --focus 3

# send window to monitor and follow focus
# ctrl + cmd - x  : yabai -m window --display recent; yabai -m display --focus recent
# ctrl + cmd - z  : yabai -m window --display prev; yabai -m display --focus prev
# ctrl + cmd - c  : yabai -m window --display next; yabai -m display --focus next
# ctrl + cmd - 1  : yabai -m window --display 1; yabai -m display --focus 1
# ctrl + cmd - 2  : yabai -m window --display 2; yabai -m display --focus 2
# ctrl + cmd - 3  : yabai -m window --display 3; yabai -m display --focus 3

# move window
# ctrl + shift + alt - q : yabai -m window --move rel:-20:0
# ctrl + shift + alt - e : yabai -m window --move rel:0:20
# ctrl + shift + alt - z : yabai -m window --move rel:0:-20
# ctrl + shift + alt - c : yabai -m window --move rel:20:0

# increase window size
# ctrl + shift + alt - a : yabai -m window --resize left:-20:0
# ctrl + shift + alt - s : yabai -m window --resize bottom:0:20
# ctrl + shift + alt - w : yabai -m window --resize top:0:-20
# ctrl + shift + alt - d : yabai -m window --resize right:20:0

# decrease window size
# ctrl + shift + alt + cmd - a : yabai -m window --resize left:20:0
# ctrl + shift + alt + cmd - s : yabai -m window --resize bottom:0:-20
# ctrl + shift + alt + cmd - w : yabai -m window --resize top:0:20
# ctrl + shift + alt + cmd - d : yabai -m window --resize right:-20:0

# set insertion point in focused container
# ctrl + alt - h : yabai -m window --insert west
# ctrl + alt - j : yabai -m window --insert south
# ctrl + alt - k : yabai -m window --insert north
# ctrl + alt - l : yabai -m window --insert east

# rotate tree
# ctrl + shift + alt + - ] : yabai -m space --rotate 90

# mirror tree y-axis
# alt - y : yabai -m space --mirror y-axis

# mirror tree x-axis
# alt - x : yabai -m space --mirror x-axis

# toggle desktop offset
ctrl + shift + alt - g : yabai -m space --toggle padding; yabai -m space --toggle gap

# toggle window parent zoom
ctrl + shift + alt - z : yabai -m window --toggle zoom-parent

# toggle window fullscreen zoom
# ctrl + shift + alt - f : yabai -m window --toggle zoom-fullscreen

# toggle window native fullscreen
# ctrl + shift + alt + cmd - f : yabai -m window --toggle native-fullscreen

# toggle window border
ctrl + shift + alt - b : yabai -m window --toggle border

# toggle window split type
ctrl + shift + alt - space : yabai -m window --toggle split

# float / unfloat window
ctrl + shift + alt + cmd - f : yabai -m window --toggle float

# toggle sticky (show on all spaces)
ctrl + shift + alt + cmd - s : yabai -m window --toggle sticky

# toggle topmost (keep above other windows)
ctrl + shift + alt + cmd - t : yabai -m window --toggle topmost

# toggle sticky, topmost and resize to picture-in-picture size
ctrl + shift + alt + cmd - p : yabai -m window --toggle sticky;\
                               yabai -m window --toggle topmost;\
                               yabai -m window --grid 5:5:4:0:1:1
